<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="STUDENT SIGN UP !"
                android:id="@+id/headertext"
                android:textColor="@color/blue"
                android:fontFamily="Futura"
                android:focusable="true"
                android:gravity="center"
                android:layout_gravity="center"
                android:typeface="serif"
                />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:hint="Enter Name"
                    android:ems="10"
                    android:id="@+id/regName"
                    />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:hint="Enter Password"
                    android:ems="10"
                    android:id="@+id/regPassword"
                    android:layout_above="@+id/regAgainPassword"
                    android:layout_alignLeft="@+id/regAgainPassword"
                    android:layout_alignStart="@+id/regAgainPassword" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:hint="Re-Enter Password"
                    android:ems="10"
                    android:layout_marginTop="10dp"
                    android:id="@+id/regAgainPassword"
                    android:layout_centerVertical="true"
                    />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:id="@+id/regEmail"
                    android:layout_marginTop="10dp"
                    android:hint="Enter Email "
                    android:layout_marginBottom="10dp"
                    android:layout_below="@+id/regAgainPassword"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </android.support.design.widget.TextInputLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_simple_border"
                style="?android:buttonBarButtonStyle"
                android:textColor="#000000"
                android:text="Create Account"
                android:gravity="center|center_horizontal"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:textSize="20dp"
                android:layout_marginTop="15dp"
                android:typeface="serif"
                android:padding="12dp"
                android:id="@+id/signup"
                />

        </LinearLayout>

    </ScrollView>

</LinearLayout>